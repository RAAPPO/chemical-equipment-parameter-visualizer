# Production Environment Variables (Render.com)
# DO NOT use these locally - they are for deployment only

# Django Secret Key (Render will generate this automatically)
SECRET_KEY=your-super-secret-production-key-change-this

# Debug Mode (False in production)
DEBUG=False

# Allowed Hosts (Render domain + custom domain)
ALLOWED_HOSTS=.onrender.com,api.raappo.cf

# Database URL (Render PostgreSQL will provide this automatically)
DATABASE_URL=postgresql://user:password@host:5432/database

# CORS Allowed Origins (frontend domain)
CORS_ALLOWED_ORIGINS=https://cepv.raappo.cf

# Python Version
PYTHON_VERSION=3.10.12